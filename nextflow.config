nextflow.enable.moduleBinaries = true    

process {
    maxForks = 1
    withLabel: big_mem {
        maxForks = 1
        cpus = 6
        memory = 13.GB
    }
}

profiles {
    conda {
        conda.enabled = true 
        conda.useMamba = true 
    }
}

params {

    help = false
    publish_dir = "$projectDir/results"
    available_GRNInference_tools = "grnboost2"
    available_DGRNInference_tools = "boostdiff,z_score,ebcoexpress,diffcoex"

    n_runs = 10
    create_metacells = false
    boostdiff {
        n_estimators = 100
        n_features = 1500
        n_subsamples = 30
        n_processes = 6

        top_n_targets = 20
        top_n_edges = 100
    }
    grnboost2 {
        top_n_edges = 100
    }
}